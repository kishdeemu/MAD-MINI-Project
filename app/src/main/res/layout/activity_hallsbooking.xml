<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EEC7"
    android:textAlignment="center"
    tools:context=".hallsbooking">


    <EditText
        android:id="@+id/noOfPeople"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="No. of people attending"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hbooking2" />

    <TextView
        android:id="@+id/halltype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="cursive"
        android:text="@string/halltype"
        android:textAlignment="center"
        android:textColor="@color/txc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hallhead" />

    <TextView
        android:id="@+id/hbooking"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="cursive"
        android:text="@string/date"
        android:textAlignment="center"
        android:textColor="@color/txc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noOfPeople" />

    <TextView
        android:id="@+id/hbooking2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="cursive"
        android:text="No. of people attending"
        android:textAlignment="center"
        android:textColor="@color/txc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halllist" />

    <TextView
        android:id="@+id/hallhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="cursive"
        android:text="@string/booking"
        android:textColor="#040303"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/halllist"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:clickable="true"
        android:fadeScrollbars="false"
        android:scrollbarStyle="insideInset"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halltype" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="cursive"
        android:text="@string/time"
        android:textAlignment="center"
        android:textColor="@color/txc"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking" />

    <EditText
        android:id="@+id/timed"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="8.00Am -  3.30PM"
        android:inputType="time"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <TextView
        android:id="@+id/personalinfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="cursive"
        android:text="@string/persinfor"
        android:textColor="@color/txc"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timed" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="@string/fulln"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personalinfor" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bookBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bookBtn"
        android:layout_width="175dp"
        android:layout_height="57dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="32dp"
        android:background="@color/butc"
        android:fontFamily="serif"
        android:text="@string/bnbutton"
        android:textColor="@color/back"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/booking"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="67dp"
        android:background="@color/back"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="@string/ddate"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hbooking" />


</androidx.constraintlayout.widget.ConstraintLayout>